.search-fail {
  display: flex;
  flex-direction: column;
}

.search-fail .fail-img {
  width: 250rpx;
  height: 250rpx;
  margin: 200rpx auto 50rpx auto;
}

.search-fail .fail-txt {
  font-size: 28rpx;
  color: #bcc1cc;
  text-align: center;
}
